{
	"info": {
		"_postman_id": "task-tracker-api-collection",
		"name": "Task Tracker API",
		"description": "API Collection for Task Tracker NestJS Application with API Response Wrapper",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Transactions",
			"item": [
				{
					"name": "Get All Transactions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["transactions"]
						},
						"description": "Get all transactions with optional filters"
					},
					"response": []
				},
				{
					"name": "Get All Transactions with Filters",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions?type=income&categoryId={{category_id}}&startDate=2024-01-01&endDate=2024-12-31",
							"host": ["{{base_url}}"],
							"path": ["transactions"],
							"query": [
								{
									"key": "type",
									"value": "income",
									"description": "income or expense (lowercase)"
								},
								{
									"key": "categoryId",
									"value": "{{category_id}}",
									"description": "Filter by category UUID"
								},
								{
									"key": "startDate",
									"value": "2024-01-01",
									"description": "Start date (YYYY-MM-DD)"
								},
								{
									"key": "endDate",
									"value": "2024-12-31",
									"description": "End date (YYYY-MM-DD)"
								}
							]
						},
						"description": "Get transactions with filters: type, categoryId, startDate, endDate"
					},
					"response": []
				},
				{
					"name": "Get Transaction by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions/{{transaction_id}}",
							"host": ["{{base_url}}"],
							"path": ["transactions", "{{transaction_id}}"]
						},
						"description": "Get a single transaction by ID"
					},
					"response": []
				},
				{
					"name": "Create Transaction (Income)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"amount\": 5000000,\n  \"type\": \"income\",\n  \"description\": \"Monthly Salary\",\n  \"date\": \"2024-02-11\",\n  \"categoryId\": \"{{category_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["transactions"]
						},
						"description": "Create a new income transaction"
					},
					"response": []
				},
				{
					"name": "Create Transaction (Expense)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"amount\": 50000,\n  \"type\": \"expense\",\n  \"description\": \"Lunch at Restaurant\",\n  \"date\": \"2024-02-11\",\n  \"categoryId\": \"{{category_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["transactions"]
						},
						"description": "Create a new expense transaction"
					},
					"response": []
				},
				{
					"name": "Update Transaction",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"amount\": 75000,\n  \"description\": \"Lunch + Coffee\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/{{transaction_id}}",
							"host": ["{{base_url}}"],
							"path": ["transactions", "{{transaction_id}}"]
						},
						"description": "Update an existing transaction (partial update supported)"
					},
					"response": []
				},
				{
					"name": "Delete Transaction",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions/{{transaction_id}}",
							"host": ["{{base_url}}"],
							"path": ["transactions", "{{transaction_id}}"]
						},
						"description": "Delete a transaction by ID"
					},
					"response": []
				}
			],
			"description": "Transaction management endpoints"
		},
